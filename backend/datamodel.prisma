type User {
  id: ID! @id
  name: String!
}

type Actor {
id: Int! @id (strategy: SEQUENCE) @sequence(name: "Actor_SEQUENCE" initialValue:1 allocationSize:100)
createdAt: DateTime! @createdAt
updatedAt: DateTime! @updatedAt
name: String!
prioridad: Int
coments: String
parent: Boolean
hijos: [Actor] @relation (onDelete: CASCADE)
}

type Tema {
id: Int! @id(strategy: SEQUENCE) @sequence(name: "Tema_SEQUENCE" initialValue:1 allocationSize:100)
createdAt: DateTime! @createdAt
updatedAt: DateTime! @updatedAt
name: String!
prioridad: Int
coments: String
parent: Boolean
hijos: [Tema] @relation(name: "HijosTema" onDelete: CASCADE)
}


type Matriz {
  id: ID! @id
  TemaParent: Tema  
  ActorParent: Actor
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  prioridad: Int
  tiempo: Int
  coment: String
}

type Estado {
  id: ID! @id
  NumActor : Int!
  NumTemas : Int!
}
